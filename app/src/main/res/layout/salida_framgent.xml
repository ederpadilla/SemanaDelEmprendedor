<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/view_root_salida"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:gravity="center">
    <ImageView
        android:src="@mipmap/inversionista"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imagen_salida"
        android:layout_weight="1"
        android:layout_marginTop="20dp" />

    <ScrollView
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:id="@+id/scrollView" >

        <TextView
            android:text="@string/capital_salida"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/grisoscuro"
            android:textSize="30sp"
            android:textStyle="bold"
            android:id="@+id/texto_salida"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

            android:gravity="center_horizontal" />
    </ScrollView>

    <com.andexert.library.RippleView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/back_shadow"
        android:id="@+id/salida_rpv"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/terminar"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />
    </com.andexert.library.RippleView>


</LinearLayout>